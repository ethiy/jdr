\newcommand\InvisibleBox[4]
{
    \begin{posterbox}[
        name=#1,#2,
        headerfont=\small,
        borderColor=white,
        headerFontColor=IGNDarkGrey,
        headerColorOne=white,
        headerColorTwo=white]{#3}{#4}
    \end{posterbox}
}

\newcommand\TransitionBox[3]{
    \begin{posterbox}[
        name=#1,
        column=0,
        span=6,
        #2,
        headerfont=\normalsize,
        headershape=roundedright,
        headerColorOne=IGNGrey,
        headerColorTwo=IGNGrey,
        headerborder=none,
        headerFontColor=white,
        textborder=none
        ]{#3}{}
    \end{posterbox}
}

\newcommand\ReferencesBox[4]{
    \begin{posterbox}[
        name=#1,#2,
        headerfont=\scshape,
        headerColorOne=IGNGrey,
        headerColorTwo=IGNGrey,
        headerborder=none,
        textborder=none,
        headerFontColor=white
        ]{#3}{#4}
    \end{posterbox}
}

\newcommand\StandardBox[4]{
    \begin{posterbox}[
        name=#1,#2,
        headerfont=\bf,
        boxColorOne=white,
        headerFontColor=IGNGreen,
        headerColorOne=white,
        headerborder=closed,
        headerColorTwo=white,
        textborder=roundedsmall]
    {#3}{#4}\end{posterbox}
}
