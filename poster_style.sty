%% Colors
\definecolor{IGNGreen}{RGB}{163, 210,  11}
\definecolor{IGNGrey}{RGB}{159, 164, 168}
\definecolor{IGNDarkGrey}{RGB}{101, 105, 110}

\newcommand\InvisibleBox[4]
{
    \begin{posterbox}[name=#1,#2,
        borderColor=white,
        headerFontColor=IGNDarkGrey,
        headerColorOne=white,
        headerColorTwo=white]{#3}{#4}
    \end{posterbox}
}

\newcommand\TransitionBox[4]{
    \begin{posterbox}[name=#1,#2,
        headershape=roundedright,
        headerColorOne=IGNGrey,
        headerColorTwo=IGNGrey,
        headerborder=none,
        textborder=none,
        headerFontColor=white
        ]{#3}{#4}
    \end{posterbox}
}

\newcommand\ReferencesBox[4]{
    \begin{posterbox}[name=#1,#2,
        headerColorOne=IGNGrey,
        headerColorTwo=IGNGrey,
        headerborder=none,
        textborder=none,
        headerFontColor=white
        ]{#3}{#4}
    \end{posterbox}
}

\newcommand\StandardBox[4]{
    \begin{posterbox}[name=#1,#2,
        boxColorOne=white,
        headerFontColor=IGNGreen,
        headerColorOne=white,
        headerborder=closed,
        headerColorTwo=white,
        textborder=rounded]
    {#3}{#4}\end{posterbox}
}
